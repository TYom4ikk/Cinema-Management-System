<Page x:Class="CinemaManagementSystem.View.SellTicketPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Продажа билетов">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Продажа билетов" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>

        <!-- Информация о сеансе -->
        <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <TextBlock x:Name="FilmTitleBlock" 
                       FontSize="18" 
                       FontWeight="SemiBold"/>
            <TextBlock x:Name="SessionInfoBlock" 
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Выбор места -->
        <StackPanel Grid.Row="2" Margin="0,0,0,10">
            <TextBlock Text="Выберите место:" 
                       Margin="0,0,0,5"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel>
                    <TextBlock Text="Ряд" Margin="0,0,0,5"/>
                    <ComboBox x:Name="RowComboBox" 
                              Width="100"
                              SelectionChanged="RowComboBox_SelectionChanged"/>
                </StackPanel>
                
                <StackPanel Grid.Column="2">
                    <TextBlock Text="Место" Margin="0,0,0,5"/>
                    <ComboBox x:Name="SeatComboBox" 
                              Width="100"/>
                </StackPanel>
            </Grid>
        </StackPanel>

        <!-- Цена -->
        <StackPanel Grid.Row="3" Margin="0,10">
            <TextBlock Text="Цена билета:"/>
            <TextBox x:Name="PriceTextBox" 
                     Width="100" 
                     HorizontalAlignment="Left"
                     Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Продать" 
                    Width="100" 
                    Height="30" 
                    Margin="0,0,10,0"
                    Click="SellButton_Click"/>
            <Button Content="Отмена" 
                    Width="100" 
                    Height="30"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Page> 