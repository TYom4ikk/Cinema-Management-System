<Page x:Class="CinemaManagementSystem.View.SchedulePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Расписание сеансов">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Расписание сеансов" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>

        <!-- Панель фильтрации -->
        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    Margin="0,0,0,10">
            <DatePicker x:Name="DateFilter" 
                        Width="150" 
                        Margin="0,0,10,0"/>
            <Button Content="Показать" 
                    Width="100" 
                    Click="ShowButton_Click"/>
            <Button Content="Сбросить" 
                    Width="100" 
                    Margin="10,0,0,0"
                    Click="ResetButton_Click"/>
        </StackPanel>

        <!-- Таблица сеансов -->
        <DataGrid x:Name="SessionsDataGrid" 
                  Grid.Row="2" 
                  AutoGenerateColumns="False" 
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Фильм" 
                                  Binding="{Binding Films.Title}" 
                                  Width="200"/>
                <DataGridTextColumn Header="Дата" 
                                  Binding="{Binding StartDateTime, StringFormat={}{0:dd.MM.yyyy}}" 
                                  Width="100"/>
                <DataGridTextColumn Header="Начало" 
                                  Binding="{Binding StartDateTime, StringFormat={}{0:HH:mm}}" 
                                  Width="80"/>
                <DataGridTextColumn Header="Окончание" 
                                  Binding="{Binding EndDateTime, StringFormat={}{0:HH:mm}}" 
                                  Width="80"/>
                <DataGridTextColumn Header="Длительность" 
                                  Binding="{Binding Films.Duration}" 
                                  Width="100"/>
                <DataGridTemplateColumn Header="Действия" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Продать билет" 
                                    Click="SellTicketButton_Click"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page> 