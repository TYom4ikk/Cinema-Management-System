<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Основной фон -->
    <SolidColorBrush x:Key="BackgroundColor" Color="#1C1C1E"/>
    <!-- Поверхности (панели, карточки, таблицы) -->
    <SolidColorBrush x:Key="SurfaceColor" Color="#2C2C2E"/>
    
    <!-- Основной текст -->
    <SolidColorBrush x:Key="PrimaryTextColor" Color="#F5F5F7"/>
    <!-- Вторичный текст -->
    <SolidColorBrush x:Key="SecondaryTextColor" Color="#8E8E93"/>

    <!-- Кнопки фон -->
    <SolidColorBrush x:Key="ButtonBackground" Color="#0A84FF"/>
    <!-- Кнопки текст -->
    <SolidColorBrush x:Key="ButtonForeground" Color="#FFFFFF"/>

    <!-- Кнопки фон при наведении -->
    <SolidColorBrush x:Key="ButtonBackgroundHover" Color="#256EFF"/>

    <!-- Акцент -->
    <SolidColorBrush x:Key="AccentColor" Color="#0A84FF"/>
    <!-- -->
    <SolidColorBrush x:Key="ButtonSecondaryColor" Color="#3A3A3C"/>
    <!-- Цвет при наведении -->
    <SolidColorBrush x:Key="HoverColor" Color="#48484A"/>
    
</ResourceDictionary>